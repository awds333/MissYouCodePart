<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditText" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/login_edittext</item>
    </style>

    <style name="LoginButton" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/wight</item>
    </style>

    <style name="BackButton" parent="AppTheme">
        <item name="android:background">@drawable/back_button_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/wight</item>
    </style>
</resources>